# ── Server ─────────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=production

# ── MongoDB ────────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.mongodb.net/studyshala

# ── JWT ────────────────────────────────────────────────────────────────────
JWT_SECRET=your_very_long_random_jwt_secret
JWT_EXPIRES_IN=7d

# ── Session ────────────────────────────────────────────────────────────────
SESSION_SECRET=your_very_long_random_session_secret

# ── Google OAuth (for user login) ──────────────────────────────────────────
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=https://YOUR_BACKEND.onrender.com/api/auth/google/callback

# ── Google Drive API (for file upload/delete) ──────────────────────────────
# Required ONLY for faculty file uploads and deletions.
# Downloads and previews work WITHOUT this token via Google's public URLs.
GOOGLE_DRIVE_CLIENT_ID=your_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_drive_client_secret
GOOGLE_DRIVE_REDIRECT_URI=https://YOUR_BACKEND.onrender.com/api/auth/google/callback
GOOGLE_DRIVE_REFRESH_TOKEN=your_drive_refresh_token

# ── Admin ──────────────────────────────────────────────────────────────────
# Comma-separated list of Google emails allowed to sign in as admin
ADMIN_EMAILS=admin@yourdomain.com

# ── Frontend URL ───────────────────────────────────────────────────────────
FRONTEND_URL=https://YOUR_FRONTEND.netlify.app
